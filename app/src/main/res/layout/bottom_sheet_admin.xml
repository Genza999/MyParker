                    android:layout_marginTop="10dp"
                    android:id="@+id/map_relative_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:map="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".MapsActivity" />
                </com.example.david.myparker.MapWrapperLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history"
                    android:textColor="@color/colorPrimaryDarkCustom"
                    android:textSize="17sp"
                    android:fontFamily="@font/product_sans"/>

                <RelativeLayout
                    android:background="@drawable/round_corner_white_fill"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/payment_company_logo"
                        android:id="@+id/payment_1"/>
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/payment_1"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@string/sample_driver_name"
                            android:textColor="@color/colorPrimaryDarkCustom"
                            android:fontFamily="@font/product_sans"/>
                        <TextView
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="@string/yesterday"
                            android:textColor="@color/colorPrimaryDarkCustomFaint"
                            android:fontFamily="@font/product_sans"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="12sp"
                        android:text="@string/sample_payment_amount_with_currency"
                        android:textColor="@color/colorPrimaryDarkCustomFaint"
                        android:fontFamily="@font/product_sans"/>
                </RelativeLayout>

