<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/your_last_payment"
            android:textColor="@color/colorPrimaryDarkCustom"
            android:textSize="15sp"
            android:fontFamily="@font/product_sans"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_alignBottom="@id/payment_amount"
                android:layout_toStartOf="@id/payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:layout_marginBottom="12dp"
                android:padding="3dp"
                android:background="@drawable/rounder_corner_lightblue"
                android:layout_gravity="bottom"
                android:layout_marginStart="5dp"
                android:text="@string/uganda_currency"
                android:textColor="@color/colorPrimaryDarkCustom"
                android:textSize="13sp"
                android:fontFamily="@font/product_sans"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="bottom"
                android:text="@string/sample_payment_amount"
                android:textColor="@color/colorPrimaryDarkCustom"
                android:textSize="53sp"/>
            <TextView
                android:layout_alignBottom="@id/payment_amount"
                android:layout_toEndOf="@id/payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:layout_marginBottom="12dp"
                android:padding="3dp"
                android:background="@drawable/round_corner_card_gradient_fill"
                android:layout_gravity="bottom"
                android:layout_marginStart="5dp"
                android:text="@string/cash"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:fontFamily="@font/product_sans"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDarkCustom">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.ContentFrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <include layout="@layout/mastercard_layout" />

                            </android.support.v7.widget.ContentFrameLayout>

                            <android.support.v7.widget.ContentFrameLayout
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <include layout="@layout/debitcard_layout" />

                            </android.support.v7.widget.ContentFrameLayout>
                        </LinearLayout>

                    </HorizontalScrollView>

                    <LinearLayout
                        android:alpha="0.7"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:background="@drawable/round_corner_white_fill"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginStart="4dp"
                                android:layout_centerVertical="true"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/gpay_logo"
                                android:id="@+id/google_pay_logo"/>
                            <LinearLayout
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/google_pay_logo"
                                android:layout_marginStart="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="@string/credit_card"
                                    android:textColor="@color/colorPrimaryDarkCustom"
                                    android:fontFamily="@font/product_sans"/>
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="@string/master_card"
                                    android:textColor="@color/colorPrimaryDarkCustomFaint"
                                    android:fontFamily="@font/product_sans"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="6dp"
                            android:background="@drawable/round_corner_white_fill"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/payment_company_logo"
                                android:id="@+id/payment_company_logo"/>
                            <LinearLayout
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/payment_company_logo"
                                android:layout_marginStart="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="@string/credit_card"
                                    android:textColor="@color/colorPrimaryDarkCustom"
                                    android:fontFamily="@font/product_sans"/>
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="@string/master_card"
                                    android:textColor="@color/colorPrimaryDarkCustomFaint"
                                    android:fontFamily="@font/product_sans"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:background="@drawable/round_corner_white_fill"
                            android:padding="10dp"
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/payment_company_logo_2"
                                android:id="@+id/payment_company_logo_2"/>
                            <LinearLayout
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/payment_company_logo_2"
                                android:layout_marginStart="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="@string/credit_card"
                                    android:textColor="@color/colorPrimaryDarkCustom"
                                    android:fontFamily="@font/product_sans"/>
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="@string/master_card"
                                    android:textColor="@color/colorPrimaryDarkCustomFaint"
                                    android:fontFamily="@font/product_sans"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginTop="6dp"
                            android:background="@drawable/round_corner_white_fill"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/mtn_mobile_money_logo"
                                android:id="@+id/mtn_mobile_money_logo"/>
                            <LinearLayout
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/mtn_mobile_money_logo"
                                android:layout_marginStart="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17sp"
                                    android:text="@string/phone_number_sample"
                                    android:textColor="@color/colorPrimaryDarkCustom"
                                    android:fontFamily="@font/product_sans"/>
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="@string/current_mobile_money_number"
                                    android:textColor="@color/colorPrimaryDarkCustomFaint"
                                    android:fontFamily="@font/product_sans"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="6dp"
                            android:background="@drawable/round_corner_white_fill"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/airtel_logo"
                                android:id="@+id/mobile_money_logo"/>
                            <LinearLayout
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/mobile_money_logo"
                                android:layout_marginStart="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17sp"
                                    android:text="@string/phone_number_sample"
                                    android:textColor="@color/colorPrimaryDarkCustom"
                                    android:fontFamily="@font/product_sans"/>
                                <TextView
                                    android:layout_gravity="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="@string/current_mobile_money_number"
                                    android:textColor="@color/colorPrimaryDarkCustomFaint"
                                    android:fontFamily="@font/product_sans"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_corner_white_fill"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/parking_lot_profile_photo"
                            android:id="@+id/payment_1"/>
                        <LinearLayout
                            android:id="@+id/parking_lot_history_layout"
                            android:layout_toEndOf="@id/payment_1"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="@string/sample_parking_lot_name"
                                android:textColor="@color/colorPrimaryDarkCustom"
                                android:fontFamily="@font/product_sans"/>
                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="@string/yesterday"
                                android:textColor="@color/colorPrimaryDarkCustomFaint"
                                android:fontFamily="@font/product_sans"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textSize="13sp"
                            android:text="@string/sample_payment_amount_with_currency"
                            android:textColor="@color/colorPrimaryDarkCustomFaint"
                            android:fontFamily="@font/product_sans"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/round_corner_border_white"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginStart="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="@string/coming_soon"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/product_sans"/>
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/custom_white_bulb"
                            android:id="@+id/coming_soon_image"/>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="@string/payment_implementation_reason"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/product_sans"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>