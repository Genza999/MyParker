<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.myparker.SignUpAdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@color/colorPrimaryDarkCustom">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/myparker_logo_only_blue_3x" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/create_account"
                android:textSize="17sp"
                android:fontFamily="@font/product_sans"
                android:textColor="@color/colorAccent"
                android:textStyle="normal"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/just_a_few_details"
                android:textSize="14sp"
                android:fontFamily="@font/product_sans"
                android:textColor="@color/colorAccentCustom"
                android:textStyle="normal"
                android:gravity="center"/>
            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_lightblue_border">

                <View
                    android:alpha="0.6"
                    android:layout_centerInParent="true"
                    android:layout_width="2dp"
                    android:layout_height="100dp"
                    android:background="@drawable/round_smallcorner_lightblue_fill"/>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginEnd="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp">
                            <View
                                android:alpha="0.3"
                                android:layout_centerInParent="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/exterior_pick"
                                android:background="@drawable/camera_location_white"/>
                            <ImageView
                                android:alpha="0.9"
                                android:scaleType="centerCrop"
                                android:id="@+id/imageExterior"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <TextView
                            android:alpha="0.9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:text="@string/exterior_photo"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/product_sans"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginStart="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp">
                            <View
                                android:alpha="0.3"
                                android:layout_centerInParent="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/interior_pick"
                                android:background="@drawable/camera_location_white"/>
                            <ImageView
                                android:alpha="0.9"
                                android:scaleType="centerCrop"
                                android:id="@+id/imageInterior"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:text="@string/interior_photo"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/product_sans"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:paddingEnd="15dp"
                android:background="@drawable/rounder_corner_lightblue">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/person_blue_icon_3x"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="38dp"
                    android:background="#00c3ff"/>
                <EditText
                    android:background="@null"
                    android:id="@+id/Parkingname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="48dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/parking_lot_name"
                    android:textColorHint="#01457c"
                    android:inputType="textAutoComplete"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/product_sans"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:paddingEnd="15dp"
                android:background="@drawable/rounder_corner_lightblue">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/person_blue_icon_3x"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="38dp"
                    android:background="#00c3ff"/>
                <EditText
                    android:background="@null"
                    android:id="@+id/slots"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="48dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/number_of_slots"
                    android:inputType="number"
                    android:textColorHint="#01457c"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/product_sans"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </RelativeLayout>
            <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rounder_corner_lightblue">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                android:src="@drawable/call_lightblue"/>
            <View
                android:layout_width="1.5dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="38dp"
                android:background="#00c3ff"/>
            <EditText
                android:background="@null"
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp"
                android:layout_centerVertical="true"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:textColorHint="#01457c"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/product_sans"
                android:maxLines="1"
                android:singleLine="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:paddingEnd="15dp"
                android:background="@drawable/rounder_corner_lightblue">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/mail_lightblue"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="38dp"
                    android:background="#00c3ff"/>
                <EditText
                    android:background="@null"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="48dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#01457c"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/product_sans"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:paddingEnd="15dp"
                android:background="@drawable/rounder_corner_lightblue">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/logout_lightblue"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="38dp"
                    android:background="#00c3ff"/>
                <EditText
                    android:background="@null"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="48dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/password"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:textColorHint="#01457c"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/product_sans"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:paddingEnd="15dp"
                android:background="@drawable/rounder_corner_lightblue">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/logout_lightblue"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="38dp"
                    android:background="#00c3ff"/>
                <EditText
                    android:background="@null"
                    android:id="@+id/retype_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="48dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/retype_password"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColorHint="#01457c"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/product_sans"
                    android:singleLine="true"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/addparklot1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_lightblue_border"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/addparklot2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingEnd="7dp"
                    android:paddingStart="7dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/latitude"
                            android:textColor="@color/colorAccentCustom"
                            android:textSize="14sp"
                            android:fontFamily="@font/product_sans"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="@string/longitude"
                            android:textColor="@color/colorAccentCustom"
                            android:textSize="14sp"
                            android:fontFamily="@font/product_sans" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="@string/location"
                            android:textColor="@color/colorAccentCustom"
                            android:textSize="14sp"
                            android:fontFamily="@font/product_sans"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/latitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="@string/sample_coordinates"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            android:fontFamily="@font/product_sans"/>
                        <TextView
                            android:id="@+id/longitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="5dp"
                            android:text="@string/sample_coordinates"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            android:fontFamily="@font/product_sans" />
                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="5dp"
                            android:text="@string/city_town_village"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp"
                            android:fontFamily="@font/product_sans" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/send1"
                style="?android:textAppearanceSmall"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/round_corner_fill_lightblue"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDarkCustom"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans"/>

            <TextView
                android:onClick="goToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="Already Signed up? Log in here!"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:fontFamily="@font/product_sans"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="60dp"
                android:text="@string/copyright"
                android:textColor="@color/hintColor"
                android:textSize="14sp"
                android:fontFamily="@font/product_sans"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
