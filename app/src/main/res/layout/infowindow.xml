<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="5dp">

    <LinearLayout
        android:background="@drawable/info_window_background"
        android:padding="5dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lotImage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/cars_traffic"
            android:scaleType="centerCrop"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/sample_parking_lot_name"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:fontFamily="@font/product_sans"/>
        <TextView
            android:id="@+id/slot_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_of_parking_lot"
            android:textColor="@color/colorPrimaryDarkCustomFaint"
            android:textSize="14sp"
            android:visibility="gone"
            android:fontFamily="@font/product_sans"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/snippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="00/00"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp"
                android:fontFamily="@font/product_sans"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="3dp"
                android:text="@string/slots"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:fontFamily="@font/product_sans"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_alignParentStart="true"
                android:id="@+id/button4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_blue_navigation_arrow"/>
            <Button
                android:layout_alignParentEnd="true"
                android:id="@+id/buttonParkNow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/car_blue_icon"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/ball_animation">
                <View
                    android:alpha="0.8"
                    android:layout_centerVertical="true"
                    android:layout_width="90dp"
                    android:layout_height="3dp"
                    android:background="@color/colorPrimary"/>
                <View
                    android:layout_centerHorizontal="true"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/round_corner_fill_lightblue"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="-2dp"
        android:layout_gravity="center"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/flipped_triangle"/>
</LinearLayout>