                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:alpha="0.4"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:background="@drawable/rounded_corner_black_fill"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/featured"
                    android:textColor="@color/colorPrimaryDarkCustom"
                    android:textSize="17sp"
                    android:fontFamily="@font/product_sans"/>

                <HorizontalScrollView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.v7.widget.ContentFrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="250dp"
                                android:layout_height="150dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/cars_traffic"/>
                                <View
                                    android:alpha="0.4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorPrimaryDarkCustom"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:text="@string/nkrumah"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/product_sans"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_margin="7dp">
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        app:srcCompat="@drawable/ic_star_white_24dp"/>
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        app:srcCompat="@drawable/ic_star_white_24dp"/>
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        app:srcCompat="@drawable/ic_star_white_24dp"/>
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        app:srcCompat="@drawable/ic_star_white_24dp"/>
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        app:srcCompat="@drawable/ic_star_lightblue_24dp"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </android.support.v7.widget.ContentFrameLayout>

                        <android.support.v7.widget.ContentFrameLayout
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
