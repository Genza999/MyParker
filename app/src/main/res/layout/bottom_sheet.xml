                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        app:srcCompat="@drawable/ic_star_lightblue_24dp"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </android.support.v7.widget.ContentFrameLayout>

